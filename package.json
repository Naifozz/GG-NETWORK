{
  "name": "gg-network",
  "version": "1.0.0",
  "description": "Cr√©ation d'une API REST pour un Reseau social fictif",
  "main": "server.js",
  "type": "module",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "queries": "ts-node ./src/queries.ts",
    "caching": "ts-node ./src/caching.ts",
    "prepare": "npx husky-init && husky install",
    "dev": "node --watch server.js",
    "start": "node server.js",
    "test": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "commit": "cz",
    "init": "node config/database.js",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,json}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Naifozz/GG-NETWORK.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Naifozz/GG-NETWORK/issues"
  },
  "homepage": "https://github.com/Naifozz/GG-NETWORK#readme",
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.23.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "prisma": "6.5.0",
    "vitest": "^3.0.9"
  },
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "@prisma/extension-accelerate": "1.3.0",
    "comm": "^0.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "process": "^0.11.10",
    "zod": "^3.24.2"
  }
}
